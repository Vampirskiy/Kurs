class chisla:
    def __init__(self, *args):
        self.My_list = []

    def proverka(self):
        while True:
            try:
                My_el = int(input('Введите значения и нажимайте Enter - '))
                self.My_list.append(My_el)
                print(f'Cписок: {self.My_list} \n ')
            except:
                print(f"Недопустимое значение")
